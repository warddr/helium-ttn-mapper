	    subdomains: ['a','b','c']
	}).addTo( mymap );


$.getJSON('api/geojson', function (geojson) {
  L.geoJson(geojson, {
    onEachFeature: function (feature, layer) {
      //layer.bindPopup(feature.properties.name);
    }
  }).addTo( mymap );
});

